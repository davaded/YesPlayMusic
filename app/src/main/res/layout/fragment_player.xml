<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/surface"
  android:padding="@dimen/screen_padding">

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/coverCard"
    android:layout_width="@dimen/player_cover_size"
    android:layout_height="@dimen/player_cover_size"
    app:cardCornerRadius="@dimen/player_cover_radius"
    app:cardElevation="@dimen/cover_elevation"
    app:cardBackgroundColor="@color/surface"
    app:strokeColor="@color/divider"
    app:strokeWidth="1dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
      android:id="@+id/albumArt"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:contentDescription="@string/app_name"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_launcher_foreground" />
  </com.google.android.material.card.MaterialCardView>

  <TextView
    android:id="@+id/title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="@string/not_playing"
    android:textColor="@color/textPrimary"
    android:textSize="@dimen/player_title_size"
    android:textStyle="bold"
    android:fontFamily="@font/barlow_bold"
    android:maxLines="1"
    android:ellipsize="end"
    app:layout_constraintTop_toBottomOf="@id/coverCard"
    app:layout_constraintStart_toStartOf="@id/coverCard"
    app:layout_constraintEnd_toEndOf="@id/coverCard" />

  <TextView
    android:id="@+id/subtitle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:textColor="@color/textSecondary"
    android:textSize="@dimen/player_subtitle_size"
    android:fontFamily="@font/barlow_regular"
    android:maxLines="1"
    android:ellipsize="end"
    app:layout_constraintTop_toBottomOf="@id/title"
    app:layout_constraintStart_toStartOf="@id/coverCard"
    app:layout_constraintEnd_toEndOf="@id/coverCard" />

  <com.google.android.material.slider.Slider
    android:id="@+id/seekBar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/player_controls_gap"
    app:trackColorActive="@color/primary"
    app:trackColorInactive="@color/divider"
    app:thumbColor="@color/primary"
    app:layout_constraintTop_toTopOf="@id/coverCard"
    app:layout_constraintStart_toEndOf="@id/coverCard"
    app:layout_constraintEnd_toEndOf="parent" />

  <LinearLayout
    android:id="@+id/controls"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginStart="@dimen/player_controls_gap"
    android:orientation="horizontal"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@id/seekBar"
    app:layout_constraintStart_toEndOf="@id/coverCard"
    app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.button.MaterialButton
      android:id="@+id/prevButton"
      android:layout_width="0dp"
      android:layout_height="@dimen/player_button_height"
      android:layout_weight="1"
      android:text="@string/previous"
      style="@style/Widget.Yes.Button.Outline" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/playButton"
      android:layout_width="0dp"
      android:layout_height="@dimen/player_button_height"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_weight="1"
      android:text="@string/play"
      style="@style/Widget.Yes.Button.Filled" />

    <com.google.android.material.button.MaterialButton
      android:id="@+id/nextButton"
      android:layout_width="0dp"
      android:layout_height="@dimen/player_button_height"
      android:layout_weight="1"
      android:text="@string/next"
      style="@style/Widget.Yes.Button.Outline" />
  </LinearLayout>

  <TextView
    android:id="@+id/status"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/player_controls_gap"
    android:layout_marginTop="16dp"
    android:textColor="@color/textTertiary"
    android:textSize="@dimen/player_status_size"
    android:fontFamily="@font/barlow_regular"
    app:layout_constraintTop_toBottomOf="@id/controls"
    app:layout_constraintStart_toEndOf="@id/coverCard"
    app:layout_constraintEnd_toEndOf="parent" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/mvButton"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/mv_button_height"
    android:layout_marginStart="@dimen/player_controls_gap"
    android:layout_marginTop="12dp"
    android:text="@string/watch_mv"
    style="@style/Widget.Yes.Button.Outline"
    android:visibility="gone"
    app:layout_constraintTop_toBottomOf="@id/status"
    app:layout_constraintStart_toEndOf="@id/coverCard" />

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/infoCard"
    style="@style/Widget.Yes.Card"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/player_controls_gap"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/mvButton"
    app:layout_constraintStart_toEndOf="@id/coverCard"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="@dimen/info_card_padding">

      <TextView
        android:id="@+id/songInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/song_info_title"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/lyrics_title_size"
        android:fontFamily="@font/barlow_semibold" />

      <TextView
        android:id="@+id/songInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/track_subtitle_size" />
    </LinearLayout>
  </com.google.android.material.card.MaterialCardView>

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/lyricsCard"
    style="@style/Widget.Yes.Card"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="@dimen/player_controls_gap"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/infoCard"
    app:layout_constraintStart_toEndOf="@id/coverCard"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="@dimen/lyrics_card_padding">

      <TextView
        android:id="@+id/lyricsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lyrics_title"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/lyrics_title_size"
        android:fontFamily="@font/barlow_semibold" />

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lyricsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="8dp" />

    </LinearLayout>

  </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
