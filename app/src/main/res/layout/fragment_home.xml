<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bg_luminous_dark">

  <!-- 环境光层 -->
  <View
    android:id="@+id/ambientOrb1"
    android:layout_width="500dp"
    android:layout_height="500dp"
    android:layout_gravity="start|top"
    android:layout_marginStart="-200dp"
    android:layout_marginTop="-150dp"
    android:background="@drawable/bg_ambient_orb_blue"
    android:alpha="0.15" />

  <View
    android:id="@+id/ambientOrb2"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:layout_gravity="end|bottom"
    android:layout_marginEnd="-150dp"
    android:layout_marginBottom="-100dp"
    android:background="@drawable/bg_ambient_orb_pink"
    android:alpha="0.1" />

  <androidx.core.widget.NestedScrollView
    android:id="@+id/homeScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:fillViewport="true">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingStart="@dimen/shell_padding"
      android:paddingEnd="@dimen/shell_padding"
      android:paddingTop="32dp"
      android:paddingBottom="@dimen/shell_padding">

      <!-- 用户标题区 -->
      <LinearLayout
        android:id="@+id/userHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/user_header_margin_bottom">

        <com.google.android.material.card.MaterialCardView
          android:id="@+id/userAvatar"
          android:layout_width="@dimen/user_avatar_size"
          android:layout_height="@dimen/user_avatar_size"
          app:cardCornerRadius="40dp"
          app:cardElevation="4dp"
          app:strokeColor="@color/surface"
          app:strokeWidth="3dp">

          <ImageView
            android:id="@+id/userAvatarImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:background="@color/primary"
            android:contentDescription="@string/app_name" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
          android:id="@+id/userTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/user_header_gap"
          android:text="@string/home_user_title"
          android:textColor="@color/textPrimary"
          android:textSize="@dimen/user_title_size"
          android:fontFamily="@font/barlow_bold"
          android:letterSpacing="-0.03" />
      </LinearLayout>

      <!-- Hero 区域 (横向布局) -->
      <LinearLayout
        android:id="@+id/heroRow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hero_row_height"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/hero_row_margin_bottom">

        <!-- 左侧: 我喜欢的音乐卡片 -->
        <FrameLayout
          android:id="@+id/heroCard"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginEnd="@dimen/hero_gap"
          android:clickable="true"
          android:focusable="true"
          android:foreground="?attr/selectableItemBackground">

          <!-- 背景层 -->
          <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_hero_card_bento" />

          <!-- 光线反射层 -->
          <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_light_reflection"
            android:alpha="0.5" />

          <!-- 内容层 -->
          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/hero_padding">

            <!-- 装饰性模糊圆 -->
            <View
              android:id="@+id/blurCircle"
              android:layout_width="200dp"
              android:layout_height="200dp"
              android:background="@drawable/bg_blur_circle"
              android:alpha="0.6"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:translationX="60dp"
              android:translationY="-60dp" />

            <!-- 歌词装饰文字 - 40% 透明度 -->
            <TextView
              android:id="@+id/heroLyric1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="@string/hero_lyric_1"
              android:textColor="#66FFFFFF"
              android:textSize="@dimen/hero_lyric_size"
              android:fontFamily="@font/barlow_medium"
              android:lineSpacingExtra="4dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent" />

            <TextView
              android:id="@+id/heroLyric2"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="@string/hero_lyric_2"
              android:textColor="#66FFFFFF"
              android:textSize="@dimen/hero_lyric_size"
              android:fontFamily="@font/barlow_medium"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/heroLyric1"
              app:layout_constraintEnd_toEndOf="parent" />

            <TextView
              android:id="@+id/heroLyric3"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="@string/hero_lyric_3"
              android:textColor="#66FFFFFF"
              android:textSize="@dimen/hero_lyric_size"
              android:fontFamily="@font/barlow_medium"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/heroLyric2"
              app:layout_constraintEnd_toEndOf="parent" />

            <!-- 标题 - tracking-tight -->
            <TextView
              android:id="@+id/heroTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/hero_favorite_title"
              android:textColor="@color/textPrimary"
              android:textSize="@dimen/hero_title_size"
              android:fontFamily="@font/barlow_bold"
              android:letterSpacing="-0.03"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toTopOf="@id/heroSubtitle" />

            <!-- 副标题 - 60% 透明度 -->
            <TextView
              android:id="@+id/heroSubtitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="@string/hero_favorite_count"
              android:textColor="#99FFFFFF"
              android:textSize="@dimen/hero_subtitle_size"
              android:fontFamily="@font/barlow_medium"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent" />

            <!-- 播放按钮 -->
            <com.google.android.material.button.MaterialButton
              android:id="@+id/heroPlayButton"
              style="@style/Widget.Yes.RoundButton"
              android:layout_width="@dimen/hero_play_size"
              android:layout_height="@dimen/hero_play_size"
              android:contentDescription="@string/play"
              app:icon="@drawable/ic_play_24"
              app:iconSize="28dp"
              app:iconGravity="textStart"
              app:iconPadding="0dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toBottomOf="parent" />

          </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <!-- 右侧: 歌曲网格 -->
        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/songGrid"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:overScrollMode="never"
          android:clipToPadding="false" />

      </LinearLayout>

      <!-- 筛选栏 -->
      <LinearLayout
        android:id="@+id/filterTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/filter_margin_bottom"
        android:paddingBottom="16dp">

        <TextView
          android:id="@+id/tabPlaylists"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/section_playlists"
          android:textColor="@color/textPrimary"
          android:textSize="@dimen/filter_tab_size"
          android:fontFamily="@font/barlow_semibold"
          android:letterSpacing="-0.02"
          android:drawableEnd="@drawable/ic_arrow_down"
          android:drawablePadding="8dp" />

        <TextView
          android:id="@+id/tabAlbums"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/filter_tab_spacing"
          android:text="@string/library_tab_album"
          android:textColor="#66FFFFFF"
          android:textSize="@dimen/filter_tab_size"
          android:fontFamily="@font/barlow_regular"
          android:paddingHorizontal="16dp"
          android:paddingVertical="10dp"
          android:background="@drawable/bg_glass_hover"
          android:clickable="true"
          android:focusable="true" />

        <TextView
          android:id="@+id/tabArtists"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:text="@string/library_tab_artist"
          android:textColor="#66FFFFFF"
          android:textSize="@dimen/filter_tab_size"
          android:fontFamily="@font/barlow_regular"
          android:clickable="true"
          android:focusable="true" />

        <TextView
          android:id="@+id/tabMV"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:text="@string/library_tab_mv"
          android:textColor="#66FFFFFF"
          android:textSize="@dimen/filter_tab_size"
          android:fontFamily="@font/barlow_regular"
          android:clickable="true"
          android:focusable="true" />

        <TextView
          android:id="@+id/tabCloud"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:text="@string/library_tab_cloud"
          android:textColor="#66FFFFFF"
          android:textSize="@dimen/filter_tab_size"
          android:fontFamily="@font/barlow_regular"
          android:clickable="true"
          android:focusable="true" />

      </LinearLayout>

      <!-- 专辑/歌单网格 -->
      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/libraryGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never" />

    </LinearLayout>
  </androidx.core.widget.NestedScrollView>

  <!-- 加载指示器 -->
  <ProgressBar
    android:id="@+id/loadingIndicator"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_gravity="center"
    android:indeterminate="true"
    android:visibility="gone" />

</FrameLayout>
