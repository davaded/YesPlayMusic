<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/homeScroll"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/surface"
  android:overScrollMode="never"
  android:fillViewport="true">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/shell_padding"
    android:paddingEnd="@dimen/shell_padding"
    android:paddingTop="24dp"
    android:paddingBottom="@dimen/shell_padding">

    <LinearLayout
      android:id="@+id/homeHeader"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical">

      <com.google.android.material.card.MaterialCardView
        android:id="@+id/homeAvatar"
        android:layout_width="@dimen/home_header_avatar"
        android:layout_height="@dimen/home_header_avatar"
        app:cardCornerRadius="@dimen/home_header_avatar"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/surfaceAlt"
        app:strokeColor="@color/cardStroke"
        app:strokeWidth="1dp">

        <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/ic_launcher_foreground"
          android:contentDescription="@string/app_name" />
      </com.google.android.material.card.MaterialCardView>

      <TextView
        android:id="@+id/homeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/home_header_gap"
        android:text="@string/home_title"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/home_header_title_size"
        android:fontFamily="@font/barlow_bold" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/homeHeroRow"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:orientation="horizontal">

      <com.google.android.material.card.MaterialCardView
        android:id="@+id/heroCard"
        android:layout_width="0dp"
        android:layout_height="@dimen/hero_card_height"
        android:layout_weight="1"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/hero_card_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="@color/heroCard"
        app:strokeColor="@color/cardStroke"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="20dp">

          <TextView
            android:id="@+id/heroLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hero_label_playlist"
            android:textColor="@color/heroText"
            android:textSize="@dimen/hero_label_size"
            android:fontFamily="@font/barlow_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <TextView
            android:id="@+id/heroTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/hero_favorite_title"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/hero_title_size"
            android:fontFamily="@font/barlow_semibold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heroLabel"
            app:layout_constraintEnd_toStartOf="@id/heroCover" />

          <TextView
            android:id="@+id/heroSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/hero_favorite_count"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/hero_subtitle_size"
            android:fontFamily="@font/barlow_regular"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heroTitle"
            app:layout_constraintEnd_toStartOf="@id/heroCover" />

          <com.google.android.material.button.MaterialButton
            android:id="@+id/heroPlayButton"
            style="@style/Widget.Yes.RoundButton"
            android:layout_width="@dimen/hero_play_size"
            android:layout_height="@dimen/hero_play_size"
            android:contentDescription="@string/play"
            app:icon="@drawable/ic_play_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

          <ImageView
            android:id="@+id/heroCover"
            android:layout_width="@dimen/hero_cover_size"
            android:layout_height="@dimen/hero_cover_size"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="@string/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
        android:id="@+id/highlightCard"
        android:layout_width="0dp"
        android:layout_height="@dimen/highlight_card_height"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/hero_card_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="@color/surface"
        app:strokeColor="@color/cardStroke"
        app:strokeWidth="1dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:padding="20dp">

          <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/highlightList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:clipToPadding="false" />
        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/libraryTabs"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp">

      <LinearLayout
        android:id="@+id/libraryLeft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/libraryEdit"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
          android:id="@+id/libraryActive"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/section_playlists"
          android:textColor="@color/textPrimary"
          android:textSize="@dimen/hero_subtitle_size"
          android:fontFamily="@font/barlow_semibold" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:text="@string/library_tab_album"
          android:textColor="@color/textSecondary"
          android:textSize="@dimen/hero_subtitle_size"
          android:fontFamily="@font/barlow_regular" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:text="@string/library_tab_artist"
          android:textColor="@color/textSecondary"
          android:textSize="@dimen/hero_subtitle_size"
          android:fontFamily="@font/barlow_regular" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:text="@string/library_tab_mv"
          android:textColor="@color/textSecondary"
          android:textSize="@dimen/hero_subtitle_size"
          android:fontFamily="@font/barlow_regular" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:text="@string/library_tab_cloud"
          android:textColor="@color/textSecondary"
          android:textSize="@dimen/hero_subtitle_size"
          android:fontFamily="@font/barlow_regular" />
      </LinearLayout>

      <com.google.android.material.button.MaterialButton
        android:id="@+id/libraryEdit"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/library_edit"
        style="@style/Widget.Yes.Button.Outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/libraryGrid"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:clipToPadding="false"
      android:overScrollMode="never" />

  </LinearLayout>
</androidx.core.widget.NestedScrollView>
