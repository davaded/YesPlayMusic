<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="@dimen/cover_size"
  android:layout_height="wrap_content"
  android:clickable="true"
  android:focusable="true"
  android:foreground="?attr/selectableItemBackground">

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/coverCard"
    android:layout_width="@dimen/cover_size"
    android:layout_height="@dimen/cover_size"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:cardCornerRadius="@dimen/cover_radius"
    app:cardElevation="@dimen/cover_elevation"
    app:cardBackgroundColor="@color/surface"
    app:strokeColor="@color/cardStroke"
    app:strokeWidth="1dp"
    app:cardUseCompatPadding="true">

    <ImageView
      android:id="@+id/coverImage"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:contentDescription="@string/app_name"
      android:src="@drawable/ic_launcher_foreground" />
  </com.google.android.material.card.MaterialCardView>

  <TextView
    android:id="@+id/coverTitle"
    android:layout_width="@dimen/cover_size"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/cover_title_margin_top"
    android:textColor="@color/textPrimary"
    android:textSize="@dimen/cover_title_size"
    android:fontFamily="@font/barlow_semibold"
    android:letterSpacing="0.01"
    android:maxLines="2"
    android:ellipsize="end"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/coverCard" />

  <TextView
    android:id="@+id/coverSubtitle"
    android:layout_width="@dimen/cover_size"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/cover_subtitle_margin_top"
    android:textColor="@color/textSecondary"
    android:textSize="@dimen/cover_subtitle_size"
    android:fontFamily="@font/barlow_regular"
    android:letterSpacing="0.01"
    android:maxLines="1"
    android:ellipsize="end"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/coverTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
