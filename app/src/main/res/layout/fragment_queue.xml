<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bg_luminous_dark">

  <!-- 环境光层 -->
  <View
    android:id="@+id/ambientOrb"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:layout_gravity="end|center_vertical"
    android:layout_marginEnd="-180dp"
    android:background="@drawable/bg_ambient_orb_pink"
    android:alpha="0.12" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- 头部 -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:layout_marginBottom="28dp">

      <!-- 标题 -->
      <TextView
        android:id="@+id/queueTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/tab_queue"
        android:textColor="@color/textPrimary"
        android:textSize="28sp"
        android:fontFamily="@font/barlow_bold"
        android:letterSpacing="-0.03" />

      <!-- 副标题/数量 -->
      <TextView
        android:id="@+id/queueSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="#66FFFFFF"
        android:textSize="15sp"
        android:fontFamily="@font/barlow_medium" />

      <!-- 清空按钮 -->
      <com.google.android.material.button.MaterialButton
        android:id="@+id/clearQueueButton"
        style="@style/Widget.Yes.Button.Outline"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="清空"
        android:textSize="14sp"
        android:visibility="gone"
        app:cornerRadius="22dp" />

    </LinearLayout>

    <!-- 队列列表 -->
    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/queueList"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:clipToPadding="false"
      android:overScrollMode="never"
      android:layoutAnimation="@anim/layout_animation_fall_down" />

    <!-- 空状态 -->
    <LinearLayout
      android:id="@+id/queueEmptyContainer"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="vertical"
      android:gravity="center"
      android:visibility="gone">

      <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_queue_music_24"
        android:alpha="0.2"
        app:tint="#FFFFFF"
        android:contentDescription="@string/queue_empty" />

      <TextView
        android:id="@+id/queueEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/queue_empty"
        android:textColor="#66FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/barlow_regular" />

    </LinearLayout>

  </LinearLayout>

</FrameLayout>
