<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:padding="8dp"
  android:background="@drawable/bg_glass_hover"
  android:clickable="true"
  android:focusable="true">

  <!-- 封面阴影 -->
  <FrameLayout
    android:id="@+id/coverFrame"
    android:layout_width="@dimen/library_cover_size"
    android:layout_height="@dimen/library_cover_size"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <View
      android:id="@+id/coverShadow"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="12dp"
      android:background="@drawable/bg_cover_shadow"
      android:alpha="0.5" />

    <com.google.android.material.card.MaterialCardView
      android:id="@+id/libraryCoverCard"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:cardCornerRadius="@dimen/library_cover_radius"
      app:cardElevation="@dimen/cover_elevation"
      app:cardBackgroundColor="@color/surfaceAlt"
      app:strokeWidth="0dp">

      <ImageView
        android:id="@+id/libraryCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher_foreground" />
    </com.google.android.material.card.MaterialCardView>
  </FrameLayout>

  <!-- 标题 -->
  <TextView
    android:id="@+id/libraryTitle"
    android:layout_width="@dimen/library_cover_size"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/cover_title_margin_top"
    android:textColor="@color/textPrimary"
    android:textSize="@dimen/library_title_size"
    android:fontFamily="@font/barlow_semibold"
    android:maxLines="1"
    android:ellipsize="end"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/coverFrame" />

  <!-- 副标题 -->
  <TextView
    android:id="@+id/librarySubtitle"
    android:layout_width="@dimen/library_cover_size"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/cover_subtitle_margin_top"
    android:textColor="@color/textSecondary"
    android:textSize="@dimen/library_subtitle_size"
    android:fontFamily="@font/barlow_regular"
    android:maxLines="1"
    android:ellipsize="end"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/libraryTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
