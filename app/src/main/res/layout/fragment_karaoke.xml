<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <!-- 模糊背景封面 -->
  <ImageView
    android:id="@+id/blurBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:contentDescription="@string/app_name" />

  <!-- 暗色遮罩层 -->
  <View
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000" />

  <!-- 退出按钮 -->
  <com.google.android.material.button.MaterialButton
    android:id="@+id/exitButton"
    style="@style/Widget.Yes.IconButton.Ghost"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:layout_gravity="top|end"
    android:layout_margin="24dp"
    android:contentDescription="@string/previous"
    app:icon="@drawable/ic_close_24"
    app:iconSize="24dp"
    app:iconTint="@color/textPrimary" />

  <!-- 歌词区域 - 垂直居中 -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="48dp">

    <!-- 前一句歌词 -->
    <TextView
      android:id="@+id/lyricPrev"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="24sp"
      android:textColor="#66FFFFFF"
      android:fontFamily="@font/barlow_medium"
      android:gravity="center"
      android:maxLines="2"
      android:ellipsize="end" />

    <!-- 当前歌词 - 高亮 -->
    <TextView
      android:id="@+id/lyricCurrent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginVertical="40dp"
      android:textSize="36sp"
      android:textColor="@color/textPrimary"
      android:fontFamily="@font/barlow_bold"
      android:letterSpacing="-0.02"
      android:gravity="center"
      android:maxLines="3"
      android:text="♪" />

    <!-- 下一句歌词 -->
    <TextView
      android:id="@+id/lyricNext"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="24sp"
      android:textColor="#66FFFFFF"
      android:fontFamily="@font/barlow_medium"
      android:gravity="center"
      android:maxLines="2"
      android:ellipsize="end" />

  </LinearLayout>

  <!-- 底部控制栏 -->
  <LinearLayout
    android:id="@+id/controlBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="32dp"
    android:paddingVertical="24dp"
    android:layout_marginHorizontal="24dp"
    android:layout_marginBottom="24dp"
    android:background="@drawable/bg_glass_card">

    <!-- 上一首 -->
    <com.google.android.material.button.MaterialButton
      android:id="@+id/prevButton"
      style="@style/Widget.Yes.IconButton.Ghost"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:contentDescription="@string/previous"
      app:icon="@drawable/ic_prev_24"
      app:iconSize="22dp"
      app:iconTint="@color/textPrimary" />

    <!-- 播放/暂停 -->
    <com.google.android.material.button.MaterialButton
      android:id="@+id/playButton"
      style="@style/Widget.Yes.RoundButton"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:layout_marginHorizontal="8dp"
      android:contentDescription="@string/play"
      app:icon="@drawable/ic_play_24"
      app:iconSize="24dp" />

    <!-- 下一首 -->
    <com.google.android.material.button.MaterialButton
      android:id="@+id/nextButton"
      style="@style/Widget.Yes.IconButton.Ghost"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:contentDescription="@string/next"
      app:icon="@drawable/ic_next_24"
      app:iconSize="22dp"
      app:iconTint="@color/textPrimary" />

    <!-- 进度条 -->
    <com.google.android.material.slider.Slider
      android:id="@+id/seekBar"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginHorizontal="16dp"
      android:valueFrom="0"
      android:valueTo="100"
      app:trackColorActive="@color/primary"
      app:trackColorInactive="#33FFFFFF"
      app:thumbColor="@color/textPrimary"
      app:thumbRadius="6dp"
      app:trackHeight="4dp" />

    <!-- 时间显示 -->
    <TextView
      android:id="@+id/timeDisplay"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#99FFFFFF"
      android:textSize="14sp"
      android:fontFamily="@font/barlow_medium"
      android:text="0:00 / 0:00" />

  </LinearLayout>

</FrameLayout>
